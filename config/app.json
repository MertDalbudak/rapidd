{
    "services": {
        "InternalAPI": {
            "hostname": "api.internal.example.com",
            "path": "/v1",
            "secure": true,
            "authorization": {
                "type": "basic",
                "username": "service-account",
                "password": "secret"
            },
            "headers": {
                "Accept": "application/json",
                "X-Service-Name": "rapidd"
            },
            "endpoints": {
                "getUser": {
                    "path": "/users/{{id}}",
                    "method": "GET"
                },
                "createUser": {
                    "path": "/users",
                    "method": "POST"
                },
                "updateUser": {
                    "path": "/users/{{id}}",
                    "method": "PUT"
                },
                "deleteUser": {
                    "path": "/users/{{id}}",
                    "method": "DELETE"
                }
            }
        },
        "PartnerAPI": {
            "hostname": "partner.example.com",
            "path": "/api",
            "secure": true,
            "authorization": {
                "type": "bearer",
                "token": "your-static-bearer-token"
            },
            "endpoints": {
                "listProducts": {
                    "path": "/products",
                    "method": "GET",
                    "queries": {
                        "format": "json"
                    }
                },
                "getProduct": {
                    "path": "/products/{{productId}}",
                    "method": "GET"
                }
            }
        },
        "WeatherService": {
            "hostname": "api.weather.example.com",
            "secure": true,
            "authorization": {
                "type": "api-key",
                "key": "your-api-key",
                "key-header": "X-API-Key"
            },
            "queries": {
                "units": "metric"
            },
            "endpoints": {
                "current": {
                    "path": "/current",
                    "method": "GET"
                },
                "forecast": {
                    "path": "/forecast/{{city}}",
                    "method": "GET",
                    "queries": {
                        "days": "7"
                    }
                }
            }
        },
        "CloudStorage": {
            "hostname": "storage.example.com",
            "path": "/v2",
            "secure": true,
            "authorization": {
                "type": "oauth2",
                "hostname": "auth.example.com",
                "token_path": "/oauth/token",
                "client_id": "your-client-id",
                "client_secret": "your-client-secret",
                "grant_type": "client_credentials",
                "scope": "storage.read storage.write"
            },
            "endpoints": {
                "listBuckets": {
                    "path": "/buckets",
                    "method": "GET"
                },
                "getObject": {
                    "path": "/buckets/{{bucket}}/objects/{{key}}",
                    "method": "GET"
                },
                "uploadObject": {
                    "path": "/buckets/{{bucket}}/objects",
                    "method": "POST",
                    "headers": {
                        "Content-Type": "application/octet-stream"
                    }
                },
                "deleteObject": {
                    "path": "/buckets/{{bucket}}/objects/{{key}}",
                    "method": "DELETE"
                }
            }
        },
        "CustomAuthAPI": {
            "hostname": "api.custom.example.com",
            "secure": true,
            "authorization": {
                "type": "api-key",
                "key": "your-secret-key",
                "key-header": "X-Custom-Auth",
                "auth-header": "X-Custom-Auth"
            },
            "endpoints": {
                "healthcheck": {
                    "path": "/health",
                    "method": "GET"
                }
            }
        }
    },
    "emails": {
        "default": {
            "host": "smtp.example.com",
            "port": 587,
            "secure": false,
            "user": "noreply@example.com",
            "password": "your-smtp-password",
            "from": "\"My App\" <noreply@example.com>",
            "name": "My App"
        },
        "support": {
            "host": "smtp.example.com",
            "port": 465,
            "secure": true,
            "user": "support@example.com",
            "password": "your-smtp-password",
            "from": "\"Support Team\" <support@example.com>",
            "name": "Support Team"
        }
    },
    "endpointAuthMethod": {
        "/api/v1": null
    },
    "languages": [
        "en_US",
        "es_ES",
        "fr_FR",
        "it_IT",
        "ar_SA",
        "pt_BR",
        "ru_RU",
        "de_DE",
        "ja_JP",
        "tr_TR"
    ]
}