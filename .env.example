NODE_ENV=development

# Server
HOST=0.0.0.0
PORT=3000
DOMAIN=localhost
FRONTEND_DOMAIN=frontend.domain
ALLOWED_ORIGINS=frontend.domain
COOKIE_SECRET=your-cookie-secret-here

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/database?schema=public"
DATABASE_URL_ADMIN="postgresql://admin:password@localhost:5432/database?schema=public"
DATABASE_PROVIDER=                              # auto-detected from URL; set to "postgresql" or "mysql" to override

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
AUTH_SESSION_STORAGE=redis                      # redis or memory
AUTH_SESSION_TTL=86400                          # Session TTL in seconds (default: 24h)
AUTH_SALT_ROUNDS=10                             # bcrypt salt rounds
AUTH_ACCESS_TOKEN_EXPIRY=1d                     # JWT access token expiry
AUTH_REFRESH_TOKEN_EXPIRY=30d                   # JWT refresh token expiry
DB_USER_TABLE=users                             # Prisma user model name

# API Settings
API_RESULT_LIMIT=500                            # Max results per query
RATE_LIMIT_WINDOW_MS=900000                     # Rate limit window in ms (default: 15min)
RATE_LIMIT_MAX_REQUESTS=100                     # Max requests per window

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_RATE_LIMIT=0
REDIS_DB_AUTH=1

# Row-Level Security
RLS_NAMESPACE="app"
RLS_USER_ID="current_user_id"
RLS_USER_ROLE="current_user_role"
