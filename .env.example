NODE_ENV=development

DOMAIN=localhost
FRONTEND_DOMAIN=frontend.domain
ALLOWED_ORIGINS=frontend.domain,frontend.domain
PORT=3002

# Authentication
AUTH_SESSION_STORAGE=redis          # redis, memory, or custom
AUTH_SESSION_TTL=86400              # Session TTL in seconds (default: 86400 = 24h)
AUTH_SALT_ROUNDS=10                 # bcrypt salt rounds
AUTH_ACCESS_TOKEN_EXPIRY=1d         # JWT access token expiry
AUTH_REFRESH_TOKEN_EXPIRY=30d       # JWT refresh token expiry
DB_USER_TABLE=users                 # Prisma user model name (auto-detects users/user)
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# API Settings
DB_CONN_IDLE_TIMEOUT=100
REQUEST_TIMEOUT=6000
API_RESULT_LIMIT=500
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=15

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_RATE_LIMIT=0
REDIS_DB_AUTH=1

RLS_NAMESPACE="app"
RLS_USER_ID="current_user_id"
RLS_USER_ROLE="current_user_role"

DATABASE_URL="postgres://user:password@server:5432/database?schema=dataschema"
DATABASE_URL_ADMIN="postgres://admin:password@server:5432/database?schema=dataschema"