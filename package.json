{
  "name": "@rapidd/core",
  "version": "2.1.0",
  "description": "Code-first REST API framework for TypeScript. Database in, API out.",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MertDalbudak/rapidd.git"
  },
  "homepage": "https://github.com/MertDalbudak/rapidd#readme",
  "bugs": {
    "url": "https://github.com/MertDalbudak/rapidd/issues"
  },
  "keywords": [
    "rest-api",
    "typescript",
    "fastify",
    "prisma",
    "orm",
    "authentication",
    "acl",
    "rls",
    "crud",
    "api-framework",
    "code-generation",
    "postgresql",
    "mysql"
  ],
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch main.ts",
    "build": "tsc",
    "test": "jest --forceExit",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "author": "Mert Dalbudak",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@prisma/adapter-mariadb": "^7.0.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@prisma/internals": "^7.0.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.3.1",
    "ejs": "^4.0.1",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@rapidd/build": "^2.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.11.11",
    "jest": "^29.7.0",
    "prisma": "^7.0.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/__test__/**/*.test.ts",
      "**/__test__/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
