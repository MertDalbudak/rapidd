{
  "name": "rapidd",
  "version": "2.0.0",
  "description": "A TypeScript/Fastify framework for rapid development of RESTful APIs with built-in ORM, authentication, authorization, and more.",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch main.ts",
    "build": "tsc",
    "test": "jest --forceExit",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "author": "Mert Dalbudak",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^8.1.0",
    "@prisma/adapter-mariadb": "^7.0.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@prisma/internals": "^7.0.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^2.5.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@rapidd/build": "^1.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.11.11",
    "cross-env": "^7.0.2",
    "jest": "^29.7.0",
    "prisma": "^7.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/__test__/**/*.test.ts",
      "**/__test__/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
